<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base QuantityPickerView Style-->
    <style name="QuantityPickerViewStyle">
        <item name="left_style">@style/BaseLeftStyle</item>
        <item name="number_style">@style/BaseNumberStyle</item>
        <item name="right_style">@style/BaseRightStyle</item>
    </style>

    <style name="BaseTextStyle" parent="SDK.Textview">
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:minWidth">35dp</item>
        <item name="android:paddingLeft">@dimen/dp10</item>
        <item name="android:paddingRight">@dimen/dp10</item>
        <item name="android:textSize">@dimen/text_size_22</item>
    </style>

    <style name="BaseLeftStyle" parent="BaseTextStyle">
        <item name="android:text">"-"</item>
    </style>

    <style name="BaseNumberStyle" parent="BaseTextStyle">
        <item name="android:text">"0"</item>
        <item name="android:background">@null</item>
        <item name="android:inputType">numberDecimal</item>
        <item name="android:maxLength">7</item>
        <item name="android:minLines">1</item>
        <item name="android:minWidth">50dp</item>
        <item name="android:textSize">@dimen/text_size_18</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="BaseRightStyle" parent="BaseTextStyle">
        <item name="android:text">"+"</item>
    </style>

</resources>