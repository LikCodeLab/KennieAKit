<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- style of sdk-->
    <style name="SDK" parent="">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="SDK.Textview">
        <item name="android:textSize">@dimen/text_size_16</item>
    </style>

    <style name="SDK.Textview.small">
        <item name="android:textSize">@dimen/text_size_14</item>
    </style>

    <!-- Base Activity Animation-->
    <style name="SDKActivityAnimation" parent="@android:style/Animation">
        <item name="android:activityOpenEnterAnimation">@anim/sdk_slide_right_in</item>
        <item name="android:activityOpenExitAnimation">@anim/sdk_stay_orig</item>
        <item name="android:activityCloseEnterAnimation">@anim/sdk_stay_orig</item>
        <item name="android:activityCloseExitAnimation">@anim/sdk_slide_right_out</item>
    </style>

</resources>