<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/_res_white"
    android:padding="@dimen/_res_dp_20">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/common_private_policy"
        android:textColor="@color/_res_black"
        android:textSize="@dimen/_res_sp_16"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_res_dp_10"
        android:lineSpacingExtra="@dimen/_res_dp_2"
        android:text="@string/common_private_policy_info"
        android:textColor="@color/_res_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_title" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_agree"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_res_dp_42"
        android:layout_marginTop="@dimen/_res_dp_30"
        android:background="@drawable/_res_btn_round_green_selector"
        android:gravity="center"
        android:text="@string/common_private_policy_agree"
        android:textColor="@color/_res_white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_content" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_close_app"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_res_dp_30"
        android:layout_marginTop="@dimen/_res_dp_10"
        android:gravity="center"
        android:text="@string/common_private_policy_cancel_app"
        android:textColor="@color/_res_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_agree" />

</androidx.constraintlayout.widget.ConstraintLayout>